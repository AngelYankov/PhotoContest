@model CreatePhotoViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add photo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContestName" />
            <div class="form-group">
                <label asp-for="ContestName " class="control-label"></label> @Html.DisplayFor(model => model.ContestName)
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" accept="image/*" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="alert alert-danger">
                <strong>Warning!</strong> Data cannot be changed later!
            </div>
            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-outline-success" />
                <a class="btn btn-outline-dark" onclick="history.go(-1);">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
