@model IEnumerable<PhotoViewModel>
@inject SignInManager<User> signInManager
@{
    ViewData["Title"] = "GetContestsPhotos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Contest's photos</h1>

<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img src="@item.PhotoUrl" width="200" height="200" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contest)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                <td>
                    @if (this.signInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("Organizer")))
                    {
                        <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                        <a class="btn btn-outline-danger"asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        @if (item.Contest)
                        {

                        }
                        <a class="btn btn-outline-success" asp-controller="Reviews" asp-action="Create" asp-route-photoId="@item.Id">Rate</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-outline-dark" asp-controller="Contests" asp-action="Index">Back to List</a>
</div>
