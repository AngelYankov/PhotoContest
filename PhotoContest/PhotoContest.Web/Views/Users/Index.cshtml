@model IEnumerable<UserViewModel>
@inject SignInManager<User> SignInManager


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <p>
        <a asp-controller="Users" asp-action="CreateOrganizer">Create new organizer</a>
    </p>
    <p>
        <a asp-controller="Users" asp-action="ViewAllParticipants">View all participants</a>
    </p>
    <p>
        <a asp-controller="Users" asp-action="SearchByUsername">Search user by username</a>
    </p>
}
else if (SignInManager.IsSignedIn(User) && User.IsInRole("Organizer"))
{
    <p>
        <a asp-controller="Users" asp-action="ViewAllParticipants">View all participants</a>
    </p>
    <p>
        <a asp-controller="Users" asp-action="SearchByUsername">Search user by username</a>
    </p>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => user.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Rank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Points)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-Username="@user.Username">Edit</a>
                        <a asp-action="Delete" asp-route-Username="@user.Username">Delete</a>
                    }
                    else if (User.IsInRole("Organizer"))
                    {
                        <a asp-action="Edit" asp-route-Username="@user.Username">Edit</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
