@model InviteViewModel

@{
    ViewData["Title"] = "Invite";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Invite user to "@Model.Name" contest</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Invite">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Name" />
            
            <div class="form-group">
                <label asp-for="Username" class="control-label">User to invite:</label>
                <select asp-for="Username" class="form-control" asp-items="ViewBag.Users"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Invite" class="btn btn-success" />
                <a class="btn btn-dark" asp-action="Index">All contests</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}