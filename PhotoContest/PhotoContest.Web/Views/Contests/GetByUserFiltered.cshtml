@model IEnumerable<ViewModel>

@{
    ViewData["Title"] = "Filtered contests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.Count() == 0)
{
    <h3>You are not participating in any contests in this phase.</h3>
}
else
{
    <h1>Contests in @Model.ToList().First().Status</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OpenOrInvitational)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimeUntilNextPhase)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OpenOrInvitational)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeUntilNextPhase)
                    </td>
                    @if (item.Status == "Phase 1")
                    {
                        <td>
                            <a asp-controller="Contests" asp-action="Enroll" asp-route-contestName="@item.Name">Enroll</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}

<div>
    <a asp-action="GetByUser">Back to filtering</a>
</div>
<div>
    <a asp-action="GetOpen">All Contests</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
