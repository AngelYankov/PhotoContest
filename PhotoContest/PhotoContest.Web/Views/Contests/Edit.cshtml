@model EditContestViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Contest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Name" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Contest name:</label> @Html.DisplayFor(model => model.Name)
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-check">
                <label asp-for="IsContestOpen" class="form-check-label"></label>
                <input class="form-check-input" type="checkbox" asp-for="IsContestOpen" /> 
            </div>
            <div class="form-group">
                <label asp-for="Phase1" class="control-label"></label>
                <input asp-for="Phase1" class="form-control" />
                <span asp-validation-for="Phase1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phase2" class="control-label"></label>
                <input asp-for="Phase2" class="form-control" />
                <span asp-validation-for="Phase2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Finished" class="control-label"></label>
                <input asp-for="Finished" class="form-control" />
                <span asp-validation-for="Phase1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Name"/>
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
