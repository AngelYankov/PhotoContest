@model EditContestViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update contest</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Name" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Contest name:</label> @Html.DisplayFor(model => model.Name)
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control" asp-items="ViewBag.Categories"></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            @Html.DisplayNameFor(model => model.IsContestOpen)
            <div class="form-check form-switch">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked asp-for="IsContestOpen" />
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Phase1" class="control-label"></label>
                <input asp-for="Phase1" class="form-control" />
                <span asp-validation-for="Phase1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phase2" class="control-label"></label>
                <input asp-for="Phase2" class="form-control" />
                <span asp-validation-for="Phase2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Finished" class="control-label"></label>
                <input asp-for="Finished" class="form-control" />
                <span asp-validation-for="Phase1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Name" />
                <input type="submit" value="Save" class="btn btn-success" />
                <a class="btn btn-dark" onclick="history.go(-1);">Back</a>
                <a class="btn btn-dark" asp-action="Index">All contests</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
