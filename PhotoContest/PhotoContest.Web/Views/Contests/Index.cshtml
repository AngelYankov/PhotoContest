@model IEnumerable<ViewModel>

@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="GetOpen">Open contests</a>
</p>
<p>
    <a asp-action="Enroll">Enroll</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpenOrInvitational)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phase1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phase2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Finished)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OpenOrInvitational)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phase1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phase2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Finished)
                </td>
                <td>
                    <a asp-action="Details" asp-route-name="@item.Name">Details</a> |
                    <a asp-action="Edit" asp-route-name="@item.Name">Edit</a> |
                    <a asp-action="Delete" asp-route-name="@item.Name">Delete</a> |
                    <a asp-action="ChooseJury" asp-route-name="@item.Name">Choose jury</a> |
                    @if (item.OpenOrInvitational == "Contest is invitational.")
                    {
                        <a asp-action="Invite" asp-route-name="@item.Name">Invite</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
