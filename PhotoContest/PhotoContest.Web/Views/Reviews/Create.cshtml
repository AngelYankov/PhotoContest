@model CreateReviewViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Write review</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input type="hidden" asp-for="PhotoId" />
            <div>
                <img src="@Model.PhotoUrl" width="200" height="200" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score" class="control-label"></label>
                <select asp-for="Score" class="form-select" style="width: 70px;">
                    <option >1</option>
                    <option >2</option>
                    <option >3</option>
                    <option >4</option>
                    <option >5</option>
                    <option >6</option>
                    <option >7</option>
                    <option >8</option>
                    <option >9</option>
                    <option >10</option>
                </select>
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            @Html.DisplayNameFor(model => model.WrongCategory)
            <div class="form-check form-switch">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" asp-for="WrongCategory" />
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Rate" class="btn btn-success" />
                <a class="btn btn-outline-dark" onclick="history.go(-1);">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
