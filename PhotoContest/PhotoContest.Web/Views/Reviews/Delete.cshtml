@model ReviewViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete review</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhotoTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Score)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Score)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Evaluator)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Evaluator)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-outline-dark" onclick="history.go(-1);">Back</a>
    </form>
</div>
